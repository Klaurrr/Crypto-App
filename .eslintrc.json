{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint",
    "import",
    "simple-import-sort"
  ],
  "extends": [
    "google"
  ],
  "rules": {
    "object-curly-spacing": [
      "warn",
      "always"
    ],
    "indent": [
      2,
      "tab"
    ],
    "no-tabs": 0,
    "quotes": [
      "warn",
      "double"
    ],
    "linebreak-style": "off",
    "max-len": [
      "off",
      100
    ],
    "simple-import-sort/imports": [
      "error",
      {
        "groups": [
          [
            "^react",
            "^@?\\w"
          ],
          [
            "^(@|components)(/.*|$)"
          ],
          [
            "^\u0000"
          ],
          [
            "^\\.\\.(?!/?$)",
            "^\\.\\./?$"
          ],
          [
            "^\\./(?=.*/)(?!/?$)",
            "^\\.(?!/?$)",
            "^\\./?$"
          ],
          [
            "^.+\\.?(scss)$"
          ]
        ]
      }
    ],
    "require-jsdoc": "off",
    "simple-import-sort/exports": "error",
    "no-unused-vars": "warn",
    "operator-linebreak": "off"
  }
}